    private void hitungActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        p=Double.parseDouble(panjang.getText());
        l=Double.parseDouble(lebar.getText());
        t=Double.parseDouble(tinggi.getText());
        a=Double.parseDouble(alas.getText());
        r=Double.parseDouble(jari.getText());
        if(persegi.isSelected()){
            Luas=p*p;
            Keliling=4*p;
            luas.setText(String.valueOf(Luas));
            keliling.setText(String.valueOf(Keliling));
        }else if(persegipanjang.isSelected()){
            Luas=p*l;
            Keliling=2*(p+l);
            luas.setText(String.valueOf(Luas));
            keliling.setText(String.valueOf(Keliling));            
        }else if(segitiga.isSelected()){
            Luas=a*t;
            Keliling=3*a;
            luas.setText(String.valueOf(Luas));
            keliling.setText(String.valueOf(Keliling));
        }else{
            Luas=phi*r*r;
            Keliling=2*phi*r;
            luas.setText(String.valueOf(Luas));
            keliling.setText(String.valueOf(Keliling));
        }
        
    }                                      

    private void resetActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        panjang.setText(" ");
        lebar.setText(" ");
        tinggi.setText(" ");
        alas.setText(" ");
        jari.setText(" ");
        luas.setText(" ");
        keliling.setText(" ");
    }                                     

